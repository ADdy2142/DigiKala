@model SpecificationsGroupEditViewModel
@{
    ViewBag.Title = "ویرایش مشخصه فنی";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card mb-5">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">ویرایش مشخصه فنی</h3>
        <div>
            <a asp-area="Admin" asp-controller="Specifications" asp-action="List" asp-route-groupId="@Model.GroupId" class="btn btn-outline-success btn-sm" role="button">لیست مشخصات فنی</a>
        </div>
    </div>
    <div class="card-body">
        <form method="post" asp-area="Admin" asp-controller="Specifications" asp-action="Edit" class="text-right">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="GroupId" />
            <div class="row">
                <div class="col-12 text-danger" asp-validation-summary="All"></div>
                <div class="form-group col-12 col-md-6 col-xl-4">
                    <label asp-for="Title">نام</label>
                    <input class="form-control" asp-for="Title">
                </div>
                @*<div class="form-group col-12 col-md-6 col-xl-4">
                        <label for="">اسلاگ</label>
                        <input type="text" class="form-control" name="" value="">
                        <small class="small text-info">از این عنوان برای استفاده در آدرس گروه مورد نظر استفاده می شود.</small>
                    </div>*@
                <div class="form-group col-12 col-md-6 col-xl-4 row states">
                    <label for="" class="col-form-label pt-0 col-12">وضعیت</label>
                    <div class="form-check custom-form-check col-3">
                        @if (Model.State == State.Enable)
                        {
                            <input class="form-check-input" type="radio" asp-for="State" id="enable-state" value="1" checked="checked">
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" asp-for="State" id="enable-state" value="1">
                        }
                        <label class="form-check-label" for="enable-state">فعال</label>
                    </div>
                    <div class="form-check custom-form-check col-3">
                        @if (Model.State == State.Disable)
                        {
                            <input class="form-check-input" type="radio" asp-for="State" id="disable-state" value="2" checked="checked">
                        }
                        else
                        {
                            <input class="form-check-input" type="radio" asp-for="State" id="disable-state" value="2">
                        }
                        <label class="form-check-label" for="disable-state">غیرفعال</label>
                    </div>
                    <small class="col-12 text-info small">تنها در صورتی که تمایل به تغییر وضعیت گروه دارید وضعیت را مشخص کنید.</small>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-left">ذخیره</button>
        </form>
    </div>
</div>