@model DeleteValueViewModel
@{
    ViewBag.Title = "حذف مقدار";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card my-5 shadow-lg text-right rounded-lg">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">حذف مقدار</h3>
        <div>
            <a asp-area="Admin" asp-controller="Tags" asp-action="Values" asp-route-tagId="@Model.TagId" class="btn btn-outline-success btn-sm" role="button">لیست مقادیر</a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">حذف مقدار "@Model.Title"</h5>
        <p class="card-text">آیا از حذف مقدار <span class="text-danger"><i>"@Model.Title"</i></span> اطمینان دارید؟</p>
        <small class="small text-danger">در صورتی که از ادامه این عملیات اطمینان دارید اقدام به حذف مقدار مورد نظر کنید.</small>
        <form asp-area="Admin" asp-controller="Tags" asp-action="DeleteValue" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TagId" />
            <button type="submit" class="btn btn-outline-danger shadow btn-block">حذف مقدار برچسب</button>
        </form>
    </div>
</div>