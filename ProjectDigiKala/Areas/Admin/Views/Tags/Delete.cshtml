@model DeleteTagViewModel
@{
    ViewBag.Title = "حذف برچسب";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card my-5 shadow-lg text-right rounded-lg">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">حذف برچسب</h3>
        <div>
            <a asp-area="Admin" asp-controller="Tags" asp-action="List" class="btn btn-outline-success btn-sm" role="button">لیست برچسب ها</a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">حذف برچسب</h5>
        <p class="card-text">آیا از حذف برچسب <span class="text-danger"><i>@Model.Title</i></span> اطمینان دارید؟</p>
        <small class="small text-danger">در صورتی که از ادامه این عملیات اطمینان دارید اقدام به حذف برچسب مورد نظر کنید.</small>
        <form asp-area="Admin" asp-controller="Tags" asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-danger shadow btn-block">حذف برچسب</button>
        </form>
    </div>
</div>