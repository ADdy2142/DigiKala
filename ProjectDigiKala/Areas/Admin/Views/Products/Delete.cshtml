@model DeleteProductViewModel
@{
    ViewBag.Title = "حذف";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card my-5 shadow-lg text-right rounded-lg">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">حذف محصول</h3>
        <div>
            <a asp-area="Admin" asp-controller="Products" asp-action="List" class="btn btn-outline-success btn-sm" role="button">لیست محصولات</a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">حذف محصول @Model.PrimaryTitle</h5>
        <p class="card-text">آیا از حذف محصول <span class="text-danger"><i>@Model.PrimaryTitle</i></span> اطمینان دارید؟</p>
        <small class="small text-danger">در صورتی که از ادامه این عملیات اطمینان دارید اقدام به حذف محصول مورد نظر کنید.</small>
        <form asp-area="Admin" asp-controller="Products" asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="@Model.Id" />
            <div asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-outline-danger shadow btn-block">حذف محصول</button>
        </form>
    </div>
</div>