@model Brand
@{
    ViewBag.Title = "افزودن برند جدید";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card mb-5">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">افزودن برند جدید</h3>
        <div>
            <a asp-area="Admin" asp-controller="Brands" asp-action="List" class="btn btn-outline-success btn-sm" role="button">لیست برندها</a>
        </div>
    </div>
    <div class="card-body">
        <form method="post" asp-area="Admin" asp-controller="Brands" asp-action="Add" asp-antiforgery="true" class="text-right" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 text-danger" asp-validation-summary="All"></div>
                <div class="form-group col-12 col-md-6 col-xl-4">
                    <label asp-for="Title">نام</label>
                    <input class="form-control" asp-for="Title">
                </div>
                <div class="form-group col-12 col-md-6 col-xl-4">
                    <label asp-for="Slug">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <small class="small text-info">از این عنوان برای استفاده در آدرس برند مورد نظر استفاده می شود.</small>
                </div>
                <div class="form-group col-12 col-md-6 col-xl-4 row">
                    <label for="" class="col-form-label pt-0 col-12">وضعیت</label>
                    <div class="form-check custom-form-check col-3">
                        <input class="form-check-input" type="radio" name="State" id="enable-state" value="1">
                        <label class="form-check-label" for="enable-state">فعال</label>
                    </div>
                    <div class="form-check custom-form-check col-3">
                        <input class="form-check-input" type="radio" name="State" id="disable-state" value="2">
                        <label class="form-check-label" for="disable-state">غیرفعال</label>
                    </div>
                </div>
                <div class="form-group col-12">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="BrandPhoto" id="photo" accept=".png, .jpg, .jpeg">
                        <label class="custom-file-label" for="photo">انتخاب تصویر...</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-left">ذخیره</button>
        </form>
    </div>
</div>