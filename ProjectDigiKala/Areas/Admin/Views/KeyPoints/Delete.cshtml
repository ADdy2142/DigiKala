@model KeyPoint
@{
    ViewBag.Title = "حذف نکته کلیدی";
}

@section breadcrumb {
    <!-- Start breadcrumb -->
    <nav page-breadcrumbs="@ViewBag.Breadcrumbs"></nav>
    <!-- End breadcrumb -->
}

<div class="card my-5 shadow-lg text-right rounded-lg">
    <div class="card-header text-right d-flex justify-content-between align-items-center border-bottom-0">
        <h3 class="mb-0">حذف نکته کلیدی</h3>
        <div>
            <a asp-area="Admin" asp-controller="KeyPoints" asp-action="List" asp-route-productId="@Model.Product.Id" class="btn btn-outline-success btn-sm" role="button">لیست نکات کلیدی</a>
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title">حذف نکته کلیدی @Model.Title</h5>
        <p class="card-text">آیا از حذف نکته کلیدی <span class="text-danger"><i>@Model.Title</i></span> اطمینان دارید؟</p>
        <small class="small text-danger">در صورتی که از ادامه این عملیات اطمینان دارید اقدام به حذف نکته کلیدی مورد نظر کنید.</small>
        <form asp-area="Admin" asp-controller="KeyPoints" asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="@Model.Id" />
            <button type="submit" class="btn btn-outline-danger shadow btn-block">حذف نکته کلیدی</button>
        </form>
    </div>
</div>